<div class="container">
        <div class="row centered-form">
        <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
        	<div class="panel panel-default">
        		<div class="panel-heading">
			    		<h3 class="panel-title">Registrarse <small></small></h3>
			 			</div>
			 			<div class="panel-body">
			    		<form role="form" {{action "saveData" model on="submit"}}>


			    			<div class="form-group">
			    				<label>Nombre</label>
						         {{input value=model.nombre type="text" class="form-control"}}

			    			</div>
			    			<div class="row">
			    				<div class="col-xs-12 col-sm-6 col-md-12">
			    					<div class="form-group">
						                <label>Username</label>
						                {{input value=model.username type="text" class="form-control"}}
			    					</div>
			    				</div>
			    			</div>
			    			<div class="row">
			    				<div class="col-xs-6 col-sm-6 col-md-6">
			    					<div class="form-group">
			    						<label>Password</label>
						         		{{input value=model.password type="password" class="form-control"}}
			    					</div>
			    				</div>
			    				<div class="col-xs-6 col-sm-6 col-md-6">
			    					<div class="form-group">
			    						<label>Confirm password</label>
						         		{{input value=model.password_Confirmation type="password" class="form-control"}}
			    					</div>
			    				</div>
			    			</div>
			    			{{input type="submit" value="Register" class="btn btn-info btn-block"}}
			    		</form>
			    	</div>
	    		</div>
    		</div>
    	</div>
    </div>
