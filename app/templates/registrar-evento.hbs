<div class="container">
        <div class="row centered-form">
        <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
        	<div class="panel panel-default">
        		<div class="panel-heading">
			    		<h3 class="panel-title">Crear un nuevo evento <small></small></h3>
			 			</div>
			 			<div class="panel-body">
			    		<form role="form" {{action "saveData" model on="submit"}}>
			    			<div class="row">
			    				<div class="col-xs-12 col-sm-12 col-md-12">
			    					<div class="form-group">

						                <label>Nombre</label>
						                {{input value=model.nombre type="text" class="form-control"}}

			    					</div>
			    				</div>

			    			</div>

							<div class="form-group">
			    				<label>Ubicacion</label>
						         {{input value=model.ubicacion type="float" class="form-control"}}

			    			</div>

			    			<div class="row">
			    				<div class="col-xs-12 col-sm-12 col-md-12">
			    					<div class="form-group">
			    						<label>Fecha</label>
						         		{{input value=model.fecha type="date" class="form-control"}}
			    					</div>
			    				</div>

			    			</div>

			    			<div class="row">
			    				<div class="col-xs-12 col-sm-12 col-md-12">
			    					<div class="form-group">
			    						<label>Invitados maximos</label>
						         		{{input value=model.maxInvitados type="number" min="1" class="form-control"}}
			    					</div>
			    				</div>

			    			</div>

			    			{{input type="submit" value="Registrar Evento" class="btn btn-info btn-block"}}

			    		</form>
			    	</div>
	    		</div>
    		</div>
    	</div>
    </div>
